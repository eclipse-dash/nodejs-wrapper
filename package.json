{
  "name": "@eclipse-dash/nodejs-wrapper",
  "version": "0.0.0",
  "description": "Node.js wrapper for dash-licenses, that makes it easier to perform license checks for JS/TS Eclipse Foundation projects",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "dash-licenses-wrapper": "src/dash-licenses-wrapper.js"
  },
  "scripts": {
    "start": "node src/dash-licenses-wrapper.js",
    "test": "mocha --reporter spec",
    "publish:ci": "yarn publish --non-interactive --access public --registry https://registry.npmjs.org/"
  },
  "files": [
    "src/*",
    "NOTICE.md",
    "SECURITY.md",
    "examples/license-check-*"
  ],
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0"
  },
  "mocha": {
    "timeout": 60000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eclipse-dash/nodejs-wrapper.git"
  },
  "keywords": [
    "dash-licenses",
    "wrapper",
    "license check",
    "GitHub workflow",
    "Eclipse Foundation"
  ],
  "author": "Ericsson and others",
  "license": "EPL-2.0",
  "bugs": {
    "url": "https://github.com/eclipse-dash/nodejs-wrapper/issues"
  },
  "homepage": "https://github.com/eclipse-dash/nodejs-wrapper#readme"
}
